<div class="col-sm-6 col-md-4 mb-4">
  <a class="gallery_img mb-0" href="/training/<%= training.slug  %>">
    <img src="/images/gallery1.jpg" alt="Bridge">
  </a>
  <div class="d-flex justify-content-between mt-1 align-items-center">
    <button class="btn-lg btn-danger" onclick="removeTraining('<%= training.id %>')"><i class="fa fa-trash"></i></button>
    <div class="title text-center text-light h4 mb-0 mx-1 text-capitalize">
      <%= training.name %>
    </div>
    <button class="btn-lg btn-primary" data-toggle="modal" data-target="#edit-<%= training.id %>-modal"><i class="fa fa-pencil"></i></button>

    <!-- Edit Training Modal -->
    <div class="modal fade" id="edit-<%= training.id %>-modal" tabindex="-1" role="dialog" aria-labelledby="edit-<%= training.id %>-modal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title font-weight-bolder p-0">Edit Training</h3>
          </div>
          <form class="main_form" method="POST" action="/training/<%= training.id %>?_method=PUT">
            <div class="modal-body">
              <div class="row">
                <div class="col-md-12">
                  <label class="w-100 text-left mb-0 pl-2" for="name">Name</label>
                  <input class="contactus" placeholder="Training Name" type="type" name="name" value="<%= training.name %>" autocomplete="off" required>
                </div>
                <div class="col-md-12">
                  <label class="w-100 text-left mb-0 pl-2" for="name">Description</label>
                  <textarea class="textarea" placeholder="Description" type="type" name="description" autocomplete="off" required><%= training.description %></textarea>
                </div>
              </div>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Update Training</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>